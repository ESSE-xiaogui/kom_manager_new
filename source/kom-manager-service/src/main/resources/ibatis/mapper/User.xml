		e.NATION,e.MARRIED,e.ID_NO,e.BIRTHDAY,e.COMPANY_ID,e.EMAIL,u.LAST_LOGIN,o.ORG_NAME,e.MOBILE_NO,
		e.UPPER_ID,e.UPPER_NAME,e.IN_SERVICE,u.IS_INACTIVE,u.REMARK,u.CREATED_BY,u.CREATED_TIME,u.UPDATED_BY,u.UPDATED_TIME
		FROM T_USER u
		LEFT JOIN T_USER_ROLE ur ON ur.USER_ID = u.ID
		LEFT JOIN T_SYSTEM_ROLE r ON r.ROLE_ID = ur.ROLE_ID
		LEFT JOIN T_EMPLOYEE e ON u.ID = e.U_ID
		LEFT JOIN T_DUTY d
		ON e.DUTY_ID =	d.ID
		LEFT JOIN T_ORGANIZATION o ON e.ORG_ID = o.ID
		WHERE 1=1
		<include refid="commonConditionByPrefix" />
		<include refid="orderByClause" />
	</select>
	<select id="findByCount" parameterType="User" resultType="int">
		SELECT count(1) AS totalcount FROM T_USER WHERE 1=1 
		<include refid="commonCondition"/>
	</select>
	
	<select id="findByName" parameterType="java.lang.String" resultMap="UserDtoResultMapper">
		SELECT u.ID,u.USER_CODE,u.USER_NAME,e.EMP_NAME,o.ORG_NAME,u.IS_INACTIVE,e.IN_SERVICE FROM T_USER u
		LEFT JOIN T_ORGANIZATION o ON o.COMPANY_ID = u.ID
		LEFT JOIN T_EMPLOYEE e ON e.COMPANY_ID = u.COMPANY_ID AND e.ORG_ID = o.ORG_ID
		WHERE u.USER_CODE = #{userCode}
	</select>
	<select id="getUserInfo" parameterType="UserInfoDto" resultMap="UserInfoDtoResultMapper">
		SELECT u.ID,u.USER_CODE,u.USER_NAME,u.PASSWORD,e.EMP_CODE,e.EMP_NAME,d.DUTY_NAME,
		o.ORG_NAME,e.IN_SERVICE,u.IS_INACTIVE FROM T_USER u		
		LEFT JOIN T_EMPLOYEE e ON u.ID = e.U_ID
		LEFT JOIN T_DUTY d ON e.DUTY_ID = d.ID
		LEFT JOIN T_ORGANIZATION o ON e.ORG_ID = o.ID
		WHERE e.COMPANY_ID = #{companyId}
		<include refid="commonCondition2"/>
	</select>
	<select id="getUser" parameterType="User" resultMap="UserResponseDtoMapper">
		SELECT u.ID,u.USER_ID,u.USER_CODE,u.USER_NAME,u.PASSWORD,e.COMPANY_ID,u.IS_INACTIVE,u.LAST_LOGIN FROM T_USER u
		LEFT JOIN T_EMPLOYEE e ON e.U_ID = u.ID
		WHERE u.USER_CODE = #{userCode} AND u.PASSWORD = #{password} 
	</select>
