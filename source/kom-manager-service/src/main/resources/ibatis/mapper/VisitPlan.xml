<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.transsion.store.mapper.VisitPlanMapper">
	<resultMap id="VisitPlanResultMapper" type="VisitPlan">
		<result column="ID" property="id"/>
		<result column="PLAN_DATE" property="planDate"/>
		<result column="VISIT_DATE" property="visitDate"/>
		<result column="COMPANY_ID" property="companyId"/>
		<result column="PLANNER" property="planner"/>
		<result column="SHOP_ID" property="shopId"/>
		<result column="STATUS" property="status"/>
		<result column="REMARK" property="remark"/>
		<result column="CREATE_BY" property="createBy"/>
		<result column="CREATE_TIME" property="createTime"/>
		<result column="UPDATE_BY" property="updateBy"/>
		<result column="UPDATE_TIME" property="updateTime"/>
		<result column="VERSION" property="version"/>
	</resultMap>
	
	<resultMap id="VisitInfoDtoResultMapper" type="VisitInfoDto">
		<result column="ID" property="id"/>
		<result column="PLAN_DATE" property="planDate"/>
		<result column="SHOP_ID" property="shopId"/>
		<result column="SHOP_NAME" property="shopName"/>
		<result column="GRADE_ID" property="gradeId"/>
		<result column="GRADE_NAME" property="gradeName"/>
		<result column="REGION_NAME" property="cityName"/>
		<result column="PLANNER" property="planner"/>
		<result column="weekPlanQty" property="weekPlanQty"/>
	</resultMap>
<!-- 	
	<resultMap id="VisitPlanParamDtoResultMapper" type="VisitPlanParamDto">
		<result column="ID" property="companyId"/>
		<result column="PLAN_DATE" property="planner"/>
		<result column="SHOP_ID" property="beginDate"/>
		<result column="SHOP_NAME" property="endDate"/>
	</resultMap> -->
	
	<sql id="commonColumns">
		 ID
		, PLAN_DATE
		, VISIT_DATE
		, PLANNER
		, COMPANY_ID
		, SHOP_ID
		, STATUS
		, REMARK
		, CREATE_BY
		, CREATE_TIME
		, UPDATE_BY
		, UPDATE_TIME
		, VERSION
	</sql>

	<sql id="commonColumnsNotPK">
		 PLAN_DATE
		, VISIT_DATE
		, PLANNER
		, COMPANY_ID
		, SHOP_ID
		, STATUS
		, REMARK
		, CREATE_BY
		, CREATE_TIME
		, UPDATE_BY
		, UPDATE_TIME
		, VERSION
	</sql>
	
	<sql id="commonProcessDateColumns">
		 ID
		, date_format(PLAN_DATE, '%Y-%m-%d %H:%i:%s') PLAN_DATE
		, date_format(VISIT_DATE, '%Y-%m-%d %H:%i:%s') VISIT_DATE
		, PLANNER
		, COMPANY_ID
		, SHOP_ID
		, STATUS
		, REMARK
		, CREATE_BY
		, date_format(CREATE_TIME, '%Y-%m-%d %H:%i:%s') CREATE_TIME
		, UPDATE_BY
		, date_format(UPDATE_TIME, '%Y-%m-%d %H:%i:%s') UPDATE_TIME
		, VERSION
	</sql>
	
	<sql id="commonCondition">
		<if test="id!= null and id!= ''"> 
			AND ID=#{id}
		</if>
		<if test="planDate!= null and planDate!= ''"> 
			AND PLAN_DATE=str_to_date(#{planDate},'%Y-%m-%d')
		</if>
		<if test="visitDate!= null and visitDate!= ''"> 
			AND VISIT_DATE=str_to_date(#{visitDate},'%Y-%m-%d')
		</if>
		<if test="planner!= null and planner!= ''"> 
			AND PLANNER=#{planner}
		</if>
		<if test="companyId!= null and companyId!= ''"> 
			AND COMPANY_ID=#{companyId}
		</if>
		<if test="shopId!= null and shopId!= ''"> 
			AND SHOP_ID=#{shopId}
		</if>
		<if test="status!= null and status!= ''"> 
			AND STATUS=#{status}
		</if>
		<if test="remark!= null and remark!= ''"> 
			AND REMARK=#{remark}
		</if>
		<if test="createBy!= null and createBy!= ''"> 
			AND CREATE_BY=#{createBy}
		</if>
		<if test="createTime!= null and createTime!= ''"> 
			AND CREATE_TIME=str_to_date(#{createTime},'%Y-%m-%d')
		</if>
		<if test="updateBy!= null and updateBy!= ''"> 
			AND UPDATE_BY=#{updateBy}
		</if>
		<if test="updateTime!= null and updateTime!= ''"> 
			AND UPDATE_TIME=str_to_date(#{updateTime},'%Y-%m-%d')
		</if>
		<if test="version!= null and version!= ''"> 
			AND VERSION=#{version}
		</if>
	</sql>
	
	<sql id="commonConditionByParam">
		<if test="companyId!= null and companyId!= ''"> 
			AND COMPANY_ID=#{companyId}
		</if>
		<if test="planner!= null and planner!= ''"> 
			AND PLANNER=#{planner}
		</if>		
		<if test="beginDate!= null and beginDate!= ''"> 
			AND PLAN_DATE&gt;=str_to_date(#{beginDate},'%Y-%m-%d')
		</if>		
		<if test="endDate!= null and endDate!= ''"> 
			AND PLAN_DATE&lt;=str_to_date(#{endDate},'%Y-%m-%d')
		</if>		
	</sql>

	<sql id="commonConditionByPrefix">
		<if test="visitPlan != null">
            <if test="visitPlan.id!= null and visitPlan.id!= ''">
				AND ID=#{visitPlan.id}
            </if>
            <if test="visitPlan.planDate!= null and visitPlan.planDate!= ''">
				AND PLAN_DATE=str_to_date(#{visitPlan.planDate},'%Y-%m-%d %H:%i:%s')
            </if>
            <if test="visitPlan.visitDate!= null and visitPlan.visitDate!= ''">
				AND VISIT_DATE=str_to_date(#{visitPlan.visitDate},'%Y-%m-%d %H:%i:%s')
            </if>
            <if test="visitPlan.planner!= null and visitPlan.planner!= ''">
				AND PLANNER=#{visitPlan.planner}
            </if>
            <if test="visitPlan.companyId!= null and visitPlan.companyId!= ''">
				AND COMPANY_ID=#{visitPlan.companyId}
            </if>
            <if test="visitPlan.shopId!= null and visitPlan.shopId!= ''">
				AND SHOP_ID=#{visitPlan.shopId}
            </if>
            <if test="visitPlan.status!= null and visitPlan.status!= ''">
				AND STATUS=#{visitPlan.status}
            </if>
            <if test="visitPlan.remark!= null and visitPlan.remark!= ''">
				AND REMARK=#{visitPlan.remark}
            </if>
            <if test="visitPlan.createBy!= null and visitPlan.createBy!= ''">
				AND CREATE_BY=#{visitPlan.createBy}
            </if>
            <if test="visitPlan.createTime!= null and visitPlan.createTime!= ''">
				AND CREATE_TIME=str_to_date(#{visitPlan.createTime},'%Y-%m-%d %H:%i:%s')
            </if>
            <if test="visitPlan.updateBy!= null and visitPlan.updateBy!= ''">
				AND UPDATE_BY=#{visitPlan.updateBy}
            </if>
            <if test="visitPlan.updateTime!= null and visitPlan.updateTime!= ''">
				AND UPDATE_TIME=str_to_date(#{visitPlan.updateTime},'%Y-%m-%d %H:%i:%s')
            </if>
            <if test="visitPlan.version!= null and visitPlan.version!= ''">
				AND VERSION=#{visitPlan.version}
            </if>
        </if>
    </sql>

	<sql id="orderByClause">
		<if test="orderBy != null">
			<foreach collection="orderBy" index="key" item="value"
					 open=" order by " separator="," close=" ">
				<include refid="orderBy" />
			</foreach>
		</if>
	</sql>

	<sql id="orderBy">
		<choose>
        	<when test="key == 'id'">
				ID ${value}
            </when>
        	<when test="key == 'planDate'">
				PLAN_DATE ${value}
            </when>
        	<when test="key == 'visitDate'">
				VISIT_DATE ${value}
            </when>
            <when test="key == 'planner'">
				PLANNER ${value}
            </when>
        	<when test="key == 'companyId'">
				COMPANY_ID ${value}
            </when>
        	<when test="key == 'shopId'">
				SHOP_ID ${value}
            </when>
        	<when test="key == 'status'">
				STATUS ${value}
            </when>
        	<when test="key == 'remark'">
				REMARK ${value}
            </when>
        	<when test="key == 'createBy'">
				CREATE_BY ${value}
            </when>
        	<when test="key == 'createTime'">
				CREATE_TIME ${value}
            </when>
        	<when test="key == 'updateBy'">
				UPDATE_BY ${value}
            </when>
        	<when test="key == 'updateTime'">
				UPDATE_TIME ${value}
            </when>
        	<when test="key == 'version'">
				VERSION ${value}
            </when>
		</choose>
	</sql>

	<insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="VisitPlan">
		<![CDATA[ INSERT INTO T_VISIT_PLAN ( ]]>
		<include refid="commonColumnsNotPK"/>
		<![CDATA[
			) VALUES ( 
			 str_to_date(#{planDate},'%Y-%m-%d %H:%i:%s')
			, str_to_date(#{visitDate},'%Y-%m-%d %H:%i:%s')
			, #{planner}
			, #{companyId}
			, #{shopId}
			, #{status}
			, #{remark}
			, #{createBy}
			, str_to_date(#{createTime},'%Y-%m-%d %H:%i:%s')
			, #{updateBy}
			, str_to_date(#{updateTime},'%Y-%m-%d %H:%i:%s')
			, #{version}
  ) ]]>
	</insert>
	<update id="update" parameterType="VisitPlan">
		<![CDATA[ UPDATE T_VISIT_PLAN SET 
			 ID=#{id} 
			, PLAN_DATE=str_to_date(#{planDate},'%Y-%m-%d %H:%i:%s')
			, VISIT_DATE=str_to_date(#{visitDate},'%Y-%m-%d %H:%i:%s')
			, PLANNER=#{planner}
			, COMPANY_ID=#{companyId} 
			, SHOP_ID=#{shopId} 
			, STATUS=#{status} 
			, REMARK=#{remark} 
			, CREATE_BY=#{createBy} 
			, CREATE_TIME=str_to_date(#{createTime},'%Y-%m-%d %H:%i:%s')
			, UPDATE_BY=#{updateBy} 
			, UPDATE_TIME=str_to_date(#{updateTime},'%Y-%m-%d %H:%i:%s')
			, VERSION=#{version} 
		WHERE ID = #{id}  ]]>
	</update>
	<delete id="deleteByPK" parameterType="java.lang.Long">
		<![CDATA[ DELETE FROM T_VISIT_PLAN WHERE ID = #{id}  ]]>
	</delete>
	<delete id="deleteByPKeys" parameterType="map">
		DELETE FROM T_VISIT_PLAN WHERE
		<foreach collection="primaryKeys" index="index" item="id"
			open=" ID IN(" separator="," close=") ">
			#{id}
		</foreach>
	</delete>
	<delete id="deleteByProperty" parameterType="VisitPlan">
		DELETE FROM T_VISIT_PLAN WHERE 1 = 1
		<include refid="commonCondition"/>
	</delete>
	<select id="getByPK" parameterType="java.lang.Long" resultMap="VisitPlanResultMapper">
		<![CDATA[ SELECT ]]>
			 <include refid="commonProcessDateColumns"/>
		FROM T_VISIT_PLAN WHERE ID = #{id}  
	</select>
	<select id="list" resultMap="VisitPlanResultMapper">
		<![CDATA[ SELECT ]]>
			 <include refid="commonProcessDateColumns"/>
 		FROM T_VISIT_PLAN
	</select>
	<select id="listByProperty" parameterType="VisitPlan" resultMap="VisitPlanResultMapper">
		<![CDATA[ SELECT ]]>
			<include refid="commonProcessDateColumns"/>
		FROM T_VISIT_PLAN WHERE 1=1 
		<include refid="commonCondition"/>
	</select>
	<select id="listPaginationByProperty" parameterType="VisitPlan" resultMap="VisitPlanResultMapper">
		SELECT 
		<include refid="commonProcessDateColumns"/>
		FROM T_VISIT_PLAN WHERE 1=1
    	<include refid="commonConditionByPrefix"/>
    	<include refid="orderByClause" />
	</select>
	<select id="findByCount" parameterType="VisitPlan" resultType="int">
		SELECT count(1) AS totalcount FROM T_VISIT_PLAN WHERE 1=1 
		<include refid="commonCondition"/>
	</select>
	
	<select id="queryPlanedVisitList" parameterType="VisitInfoDto" resultMap="VisitInfoDtoResultMapper">
		SELECT v.*, s.SHOP_NAME, g.GRADE_NAME, r.REGION_NAME FROM T_VISIT_PLAN v LEFT JOIN T_SHOP s ON v.SHOP_ID = s.ID 
		LEFT JOIN T_SHOP_GRADE g ON s.GRADE_ID = g.ID LEFT JOIN T_REGION r ON s.REGION_ID = r.ID 
		WHERE SUBSTRING(v.PLAN_DATE, 1, 10) = #{planDate} AND PLANNER = #{planner}
	</select>
	
	<select id="queryWeekPlanCount" parameterType="VisitInfoDto" resultMap="VisitInfoDtoResultMapper">
		SELECT SHOP_ID, COUNT(*) AS weekPlanQty FROM T_VISIT_PLAN 
		WHERE SUBSTRING(PLAN_DATE, 1, 10) BETWEEN #{planDate} AND #{planDate} AND PLANNER = #{planner} GROUP BY SHOP_ID
	</select>
	
	<select id="findWeekQtry" parameterType="VisitPlanParamDto" resultType="int">
		SELECT COUNT(*) FROM 
		T_VISIT_PLAN WHERE 1=1
		<include refid="commonConditionByParam"/>
	</select>
</mapper>